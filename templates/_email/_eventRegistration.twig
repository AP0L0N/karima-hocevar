{% extends '_email/email' %}

{% block content %}
<table align="center" width="600" cellpadding="0" cellspacing="0" border="0" style="padding-top:80px;">
    <tr>
        <td>
            <table align="center" width="600" cellpadding="0" cellspacing="0" border="0" style="background-color: #ffffff; border-radius: 30px;">
                <tr>
                    <td align="center" style="padding: 40px 40px 20px;">
                        <img src="{{ getenv('PRIMARY_SITE_URL') }}/assets/img/email-event-register-icon.png" alt="">
                        <h2 style="color: #EA6387; font-size: 36px; margin: 10px 0;font-weight: 500;">{{ "You're registered!" | t }}</h2>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 0 40px 35px 40px;">
                        <p style="color: #241E1B; font-size: 18px; line-height: 1.5;font-weight: 400;">
                            {{"Dear" | t }} {{ name }},
                        </p>
                        <p style="color: #241E1B; font-size: 18px; line-height: 1.5;font-weight: 400;">
                            {{"We have received your registration on the Valentina Karima Hočevar website with the information below:" | t }}
                        </p>
                        <table width="100%" cellpadding="10" cellspacing="0" border="0" style="border-collapse: collapse;">
                            <tr>
                                <td style="padding-left: 0;">
                                    <p style="color: #EA6387; font-size: 14px; line-height: 1.5;font-weight: 400;margin: 0 0 3px;">{{"Date of registration:" | t }}</p>
                                    <p style="color: #241E1B; font-size: 18px; line-height: 1.5;font-weight: 700;margin: 0;">{{ now | date('d. F Y') }}</p>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-left: 0;">
                                    <p style="color: #EA6387; font-size: 14px; line-height: 1.5;font-weight: 400;margin: 0 0 3px;">{{"Registered for:" | t }}</p>
                                    <p style="color: #241E1B; font-size: 18px; line-height: 1.5;font-weight: 700;margin: 0;">{{ event }}</p>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-left: 0;">
                                    <p style="color: #EA6387; font-size: 14px; line-height: 1.5;font-weight: 400;margin: 0 0 3px;">{{"Name and surname:" | t }}</p>
                                    <p style="color: #241E1B; font-size: 18px; line-height: 1.5;font-weight: 700;margin: 0;">{{ name }}</p>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-left: 0;">
                                    <p style="color: #EA6387; font-size: 14px; line-height: 1.5;font-weight: 400;margin: 0 0 3px;">{{"E-mail:" | t }}</p>
                                    <p style="color: #241E1B; font-size: 18px; line-height: 1.5;font-weight: 700;margin: 0;">{{ email }}</p>
                                </td>
                            </tr>
                            {% if profession is not empty %}
                            <tr>
                                <td style="padding-left: 0;">
                                    <p style="color: #EA6387; font-size: 14px; line-height: 1.5;font-weight: 400;margin: 0 0 3px;">{{"Profession:" | t }}</p>
                                    <p style="color: #241E1B; font-size: 18px; line-height: 1.5;font-weight: 700;margin: 0;">{{ profession }}</p>
                                </td>
                            </tr>
                            {% endif %}
                        </table>
                        <p style="color: #241E1B; font-size: 18px; line-height: 1.5; margin-top: 20px;">
                            {{"You will be contacted shortly," | t }}
                        </p>
                        <p style="color: #241E1B; font-size: 18px; line-height: 1.5;">
                            {{"Greetings," | t }}<br>
                            Karima Hočevar
                        </p>
                    </td>
                </tr>
            </table>

            {% include '_email/_footer' %}
        </td>
    </tr>
</table>
{% endblock %}