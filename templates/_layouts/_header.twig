                                        </svg>
                                    </a>
                                    <ul class="dropdown-menu">
                                        {% for child in node.children %}
                                            <li>
                                                <a href="{{ child.url }}" class="dropdown-item {{ child.active ? 'active' : '' }}">{{ child.title }}</a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% else %}
                                    <a href="{{ node.url }}" class="nav-link {{ node.active ? 'active' : '' }}">{{ node.title }}</a>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </nav>
